{
  "name": "tha-server",
  "version": "1.0.0",
  "description": "The server for the THA test application",
  "author": "Henrique Ca√∫la",
  "main": "dist/app.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon -r dotenv/config src/app.ts",
    "prepare": "husky install",
    "cy:open": "cypress open",
    "cy:test": "cypress run",
    "start:instrumented": "nyc --silent nodemon -r dotenv/config src/app.ts",
    "test": "start-server-and-test start:instrumented http://localhost:3002/health-check cy:test"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "nodemonConfig": {
    "ignore": [
      "cypress/*"
    ]
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/lodash": "^4.14.178",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.12",
    "@types/express": "^4.17.13",
    "cypress": "^9.2.1",
    "dotenv": "^10.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.4"
  }
}
